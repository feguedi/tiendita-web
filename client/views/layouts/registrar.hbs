{{> header }}

{{> navbar }}

<main class="page">
    <section class="clean-block clean-form dark">
        <div class="container">
            <div class="block-heading">
                <h2 class="text-info">Regístrate</h2>
            </div>
            <form method="POST" action="/registrar" enctype="application/x-www-form-urlencoded">
                <div class="form-group"><label for="name">Nombre</label><input class="form-control item" type="text" name="name" id="reg-name"></div>
                <div class="form-group"><label for="email">Correo</label><input class="form-control item" type="email" name="email" id="reg-email"></div>
                <div class="form-group"><label for="username">Apodo</label><input class="form-control item" type="text" name="username" id="reg-username"></div>
                <div class="form-group"><label for="password">Contraseña</label><input class="form-control item"type="password" name="password" id="reg-password"></div>
                <button id="btn-registrar" class="btn btn-primary btn-block" type="submit">Registrar</button>
                <p class="text-center">¿Ya tienes cuenta? <a href="/login">Inicia sesión</a></p>
            </form>
        </div>
    </section>
</main>

