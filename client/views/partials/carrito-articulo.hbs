<div class="product">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-3">
            <div class="product-image"><img class="img-fluid d-block mx-auto image" src={{ img }} /></div>
        </div>
        <div class="col-md-5 product-info"><a href="#" class="product-name">{{ nombre_articulo }}</a>
            <div class="product-specs">
                {{ especificaciones }}
                {{!--                 
                <div><span>Display: </span><span class="value">5 inch</span></div>
                <div><span>RAM: </span><span class="value">4GB</span></div>
                <div><span>Memory: </span><span class="value">32GB</span></div>
                --}}
            </div>
        </div>
        <div class="col-6 col-md-2 quantity">
            <label class="d-none d-md-block" for="quantity">{{ cantidad }}</label>
            <input type="number" value="1" id="number" class="form-control quantity-input" />
        </div>
        <div class="col-6 col-md-2 price"><span>{{ total_articulo }}</span></div>
    </div>
</div>